# task2

import asyncio

class PausableTask:

    def __init__(self):
        self._condition = asyncio.Condition()
        self._paused = False

    
    async def start(self):
        while True:
            async with self._condition:

                while self._paused:
                    await self._condition.wait()  

            print("Working...")
            await asyncio.sleep(1)
        
        
    async def pause(self):
        async with self._condition:
            print("Pausing task...")
            self._paused = True

    async def resume(self):
        async with self._condition:
            print("Resuming task...")
            self._paused = False
            self._condition.notify_all()


import asyncio

class PausableTask:

    def __init__(self):
        self._condition = asyncio.Condition()
        self._paused = False

    async def start(self):
        while True:
            async with self._condition:
                while self._paused:
                    await self._condition.wait()
            print("Working...")
            await asyncio.sleep(1)

    async def pause(self):
        async with self._condition:
            print("Pausing task...")
            self._paused = True

    async def resume(self):
        async with self._condition:
            print("Resuming task...")
            self._paused = False
            self._condition.notify_all()



